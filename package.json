{
  "name": "csmanager",
  "displayName": "CSManager",
  "description": "Extens√£o para apoio ao desenvolvimento na PHC CS Framework.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "csmanager.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "csmanager.openGUI",
        "title": "CSManager"
      },
      {
        "command": "csmanager.pull",
        "title": "CSManager: Pull"
      },
      {
        "command": "csmanager.configuration",
        "title": "CSManager: Configuration"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "csManager.dbhost": {
          "type": "string",
          "default": "",
          "description": "Servidor de base de dados."
        },
        "csManager.port": {
          "type": "string",
          "default": "1433",
          "description": "Porta do servidor de base de dados."
        },
        "csManager.user": {
          "type": "string",
          "default": "",
          "description": "Nome de utilizador da base de dados."
        },
        "csManager.password": {
          "type": "string",
          "default": "",
          "description": "Senha do utilizador da base de dados."
        },
        "csManager.db": {
          "type": "string",
          "default": "",
          "description": "Nome da base de dados."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1"
  },
  "dependencies": {
    "mssql": "^11.0.1"
  }
}
